#==============================================================================#
#                               // NAME \\                                     #
#==============================================================================#

NAME = ft_retro

#==============================================================================#
#                           //  SOURCES  \\                                    #
#==============================================================================#

SRCS =	srcs/main.cpp \
				srcs/AEntity.class.cpp \
				srcs/Player.class.cpp \
				srcs/Projectil.class.cpp \
				srcs/Enemi.class.cpp \
				srcs/Game.class.cpp

#==============================================================================#
#                             // Includes \\                                   #
#==============================================================================#

INC = ./includes

#==============================================================================#
#                             // OBJECTS \\                                    #
#==============================================================================#

OBJ = $(SRCS:.cpp=.o)

#==============================================================================#
#                             //  FLAGS  \\                                    #
#==============================================================================#

FLAGS = -Wall -Werror -Wextra

#==============================================================================#
#                            // COMPILATION \\                                 #
#==============================================================================#

all: $(NAME)

$(NAME): $(OBJ)
	clang++ -lncurses -o $(NAME) $(FLAGS) $(OBJ) -I$(INC)

#==============================================================================#
#                              // DELETING \\                                  #
#==============================================================================#

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

#==============================================================================#
#                             // RETRY \\                                      #
#==============================================================================#

re: fclean all

.PHONY : all clean fclean re
